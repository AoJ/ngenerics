                    ItemsSource="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:MainWindow, AncestorLevel=1}, Path=MainData}" 
                    Title="Sortable data" 
                    Name="SortedData">                    
                </chartingToolkit:ColumnSeries>
                <chartingToolkit:ColumnSeries                     
                    Title="Original Data" 
                    Name="OriginalData">
                </chartingToolkit:ColumnSeries>

