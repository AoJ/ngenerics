            <StackPanel Name="stChartPanel" Orientation="Horizontal">                
                <Button Content="Generate Data" Height="23" Name="btnAddData" Width="75" Click="btnAddData_Click" />                
                <Button Content="Sort Data" Height="23" Name="btnSort" Width="75" Click="btnSortData_Click" />
                <Button Content="Do Magic" Height="23" Name="btnMagic" Width="75" Click="btnMagic_Click" />
                <ComboBox Height="23" Name="comboSorter" Width="120" ItemsSource="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:MainWindow, AncestorLevel=1}, Path=SorterList}" />
